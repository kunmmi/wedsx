# BearTech Token Analysis Bot - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Telegram Bot Token (Required)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# GoPlus API Key (Required for security analysis)
# Get from https://gopluslabs.io/
GOPLUS_API_KEY=your_goplus_api_key_here

# Explorer API Keys (Required for contract data)
# Get from respective explorer websites
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# Moralis API Key (Required for additional data)
# Get from https://moralis.io/
MORALIS_API_KEY=your_moralis_api_key_here

# Optional: Referral tag for tracking
REF_TAG=pandatech

# Optional: Cache settings
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Optional: Request timeout (seconds)
REQUEST_TIMEOUT=30

# Optional: Max retries for API calls
MAX_RETRIES=3

